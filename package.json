{
  "name": "promptcraft",
  "displayName": "PromptCraft",
  "description": "A VS Code extension that helps you create, organize, and reuse AI instructions efficiently. PromptCraft creates a dedicated workspace folder for your AI prompts, provides a sidebar interface for quick access to your instruction library, and enables seamless creation of new instructions with a single click.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "promptcraft",
          "title": "PromptCraft",
          "icon": "resources/promptcraft.svg"
        }
      ]
    },
    "views": {
      "promptcraft": [
        {
          "id": "promptcraftView",
          "name": "PromptCraft"
        }
      ]
    },
    "commands": [
      {
        "command": "promptcraft.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "promptcraft.createPrompt",
        "title": "PromptCraft: 新規プロンプト作成"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "promptcraft.createPrompt",
          "when": "view == promptcraftView",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --max-warnings=0",
    "fmt": "prettier -w . && eslint src --fix",
    "fmt:check": "prettier -c .",
    "ci": "npm run fmt:check && npm run test",
    "test": "vitest run --coverage && vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.100.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vitest/coverage-v8": "^3.1.3",
    "@vitest/ui": "^3.1.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.23.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2",
    "vitest": "^3.1.3"
  },
  "prettier": {
    "printWidth": 140
  }
}
